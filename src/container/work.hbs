{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>

    </header>
    
    {{#with main}}
    <main>
        <section>
            {{> title data='Work history' big=true }}
            <div>
                <ul>
                 {{#each works}}
                    <li>
                              <div>{{position}}</div>
                              <br>
                              <div>
                                {{duration.from}} - 
                                {{#if duration.to}} {{duration.to}} 
                                {{else}}(досі працюємо)
                                {{/if}}
                              </div>

                              <div>
                                {{#if company.url}} 
                                {{> link href=company.name blank=true noLine=true}}
                                {{else}}
                             <b>{{company.name}}</b>
                                {{/if}}
                              </div>
                  
                        
                            <br>
                            <br>
                            <div>
                                <strong>Projects ({{projectAmount}})</strong>
                            </div>
                            
                            <br>

                            <ul>
                                {{#each projects}}
                                <li>
                                        {{> link text=name href=url blank=true noLine=true}}
                                </li>
                               
                             <br>

                             <div>
                                 <p>
                                    {{about}}
                                 </p>
                             </div>

                             <br>

                             <div>
                                <em>Project stacks(3)</em>
                             </div>

                             <br>
                           

                             {{#each stacks}}
                             <li>
                                {{name}}
                             
                             {{/each}}

                             <br>
                                </li>
                             <br>
                             <div>
                                <em>Project awards(2)</em>
                             </div>
                             
                             <br>

                             {{#each awards}}
                                <div>
                                 {{name}}
                                </div>
                             {{/each}}
                             
                             {{/each}}
                            </ul>
                          </li>
                    <br>
                 {{/each}}
                </ul>
            </div>
        </section>
         </main>
    {{/with}}
</div>
{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}
 