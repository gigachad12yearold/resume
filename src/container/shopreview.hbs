<main class="ps-3">
    <div class="card p-2 mb-5">
        <div class="row">
            <div class="col-7">
                <h2>
                    {{navigation.Logo}}
                </h2>
            </div>
            <div class="col-5">
                <div class="nav d-flex justify-content-end">
                    {{#each navigation.links}}
                    <div class="nav-item">
                        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">
                            {{text}}
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    {{#with formBlock}}
    <div class="row">
        <div class="col-8">
            <h1>{{header}}</h1>
            {{#with rating}}
            <p class="my-4">{{title}}: {{value}}</p>
            {{/with}}
            {{#with actionBlock}}
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>

            <hr class="my-5">
            <div class="card">
                <div class="card-body">
                    {{#with report}}
                    <p>{{title}}</p>
                    {{#with button}}
                    <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            {{/with}}

            <hr class="my-5">

            {{#with feedbackBlock}}
            <h2>{{title}}</h2>
            {{#each buttons}}

            {{#if isWarning}}
            <a href="{{link}}" class="btn btn-warning mt-5 mx-2">{{text}}</a>
            {{/if}}
            {{#if isSuccess}}
            <a href="{{link}}" class="btn btn-success mt-5 mx-2">{{text}}</a>
            {{/if}}
            {{#if isDanger}}
            <a href="{{link}}" class="btn btn-danger mt-5 mx-2">{{text}}</a>
            {{/if}}

            {{/each}}
            {{/with}}

        </div>

        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card mt-4">
                <div class="card-body">
                    <img src="https://picsum.photos/110/110" class="card-img-aside" alt="pic">
                    <p class="my-2">{{name}}</p>
                </div>
            </div>
            <div class="card my-3">
                <div class="col-8">
                    <div class="card-body">
                        <h5>{{price}}</h5>
                        <p class="my-2">{{availability}}</p>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-primary my-1">
                            {{text}}
                        </a>
                        {{/if}}

                        {{#if isSecondary}}
                        <a href="{{link}}" class="btn btn-secondary my-1">
                            {{text}}
                        </a>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {{#with seller}}
                    {{title}}: {{value}}
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}

    <hr class="my-5">

    {{> reviewItem}}


    <div class="my-5">
        {{#with service}}
        <div class="card text-bg-success text-center">
            <div class="card-body">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <a href="https://www.youtube.com/"><button class="btn btn-primary">{{text}}</button></a>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </div>

    <hr class="mt-5 mb-2">

    <div class="row">
        {{#each footer}}
        <div class="nav col-2 px-2 mx-3">
            {{#each this}}
            <div>
                <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">
                    {{this.text}} <br>
                </a>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>



</main>