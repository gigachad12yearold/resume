<div class="row">
    {{#each goodsList}}
    <div class="col-6">
        <div class="card mb-2">
            <img class="card-img-top" src="https://picsum.photos/400/200">
            <div class="card-body">

                <div class="mb-3">
                    {{#if isHot}}
                    <span class="badge text-bg-warning text-light text-uppercase rounded-pill my-2">
                        Hot
                    </span>
                    {{/if}}
                    {{#if isNew}}
                    <span class="badge text-bg-primary text-light text-uppercase rounded-pill">
                        New
                    </span>
                    {{/if}}
                    <br>
                    {{#if isFast}}
                    <span class="badge text-bg-success text-light my-1">
                        Швидка доставка
                    </span>
                    {{/if}}
                    {{#if isFree}}
                    <span class="badge text-bg-secondary text-light">
                        Безкоштовна доставка
                    </span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <h5>{{name}}</h5>
                </div>
                <div class="mb-3">
                    {{#with review}}
                    {{amount}} {{text}}
                    {{/with}}
                </div>
                <div class="mb-3">
                    <h3>{{price}}</h3>
                </div>
                <div class="mb-3">
                    {{delivery}}
                </div>
                <div class="mb-3">
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <a href="{{link}}" class="btn btn-primary my-1">{{text}}</a>
                    {{/if}}
                    {{#if isSecondary}}
                    <a href="{{link}}" class="btn btn-secondary my-1">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>

                <div class="mb-3">
                    <ul>
                        {{#each characteristics}}
                        <li>{{title}}: {{value}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>